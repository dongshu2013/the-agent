{
  "manifest_version": 3,
  "name": "MIZU Agent",
  "version": "1.0.0",
  "description": "AI-powered browser assistant",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.ts"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "*.js",
        "*.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}