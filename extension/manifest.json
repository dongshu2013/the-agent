{
  "manifest_version": 3,
  "name": "MIZU Agent",
  "version": "1.0.0",
  "description": "A Chrome extension that provides AI assistance",
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "MIZU Agent"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}