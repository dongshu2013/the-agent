generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id              String          @id @default(uuid())
  username        String          @unique
  email           String?         @unique
  api_key         String          @unique @default(uuid())
  api_key_enabled Boolean         @default(true)
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt
  conversations   conversations[]
  credits         credits[]
  orders          orders[]
}

model conversations {
  id         String     @id @default(uuid())
  user_id    String
  created_at DateTime   @default(now())
  status     String     @default("active")
  user       users      @relation(fields: [user_id], references: [id])
  messages   messages[]
}

model messages {
  id              String                 @id @default(uuid())
  conversation_id String
  role            String
  content         Json
  created_at      DateTime               @default(now())
  tool_calls      Json?
  embedding       Unsupported("vector")?
  is_deleted      Boolean                @default(false)
  deleted_at      DateTime?              @db.Timestamptz(6)
  conversation    conversations          @relation(fields: [conversation_id], references: [id])
  tool_call_id    String?

  @@index([embedding])
}

model tg_chats {
  id               String        @id @default(uuid())
  user_id          String
  chat_id          String
  chat_type        String
  chat_title       String
  is_public        Boolean       @default(false)
  is_free          Boolean       @default(false)
  subscription_fee Decimal       @default(0)
  last_synced_at   DateTime      @default(now())
  status           String        @default("watching")
  created_at       DateTime      @default(now())
  updated_at       DateTime      @default(now())
  messages         tg_messages[]

  @@unique([user_id, chat_id])
}

model tg_messages {
  id                String                 @id @default(uuid())
  message_id        String
  chat_id           String
  message_text      String
  message_timestamp BigInt
  sender_id         String?
  is_pinned         Boolean                @default(false)
  created_at        DateTime               @default(now())
  updated_at        DateTime               @default(now())
  reply_to_msg_id   String?
  sender_firstname  String?
  sender_lastname   String?
  sender_username   String?
  embedding         Unsupported("vector")?
  chat              tg_chats               @relation(fields: [chat_id], references: [id])

  @@unique([chat_id, message_id])
  @@index([embedding])
}

model tg_users {
  id         String   @id @default(uuid())
  user_id    String
  user_type  String
  username   String
  first_name String?
  last_name  String?
  photo_url  String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

enum TransactionType {
  new_user    // Initial credits for new user
  order_pay   // Credits from payment
  system_add  // Credits added by system
  completion  // Credits used for completion
}

model credits {
  id              String          @id @default(uuid())
  user_id         String
  order_id        String?
  conversation_id String?
  model           String?
  amount          Decimal?        @db.Decimal(10, 6)
  trans_credits   Decimal         @default(0) @db.Decimal(10, 6) // negative(-10) or positive(+20) transaction credits
  user_credits    Decimal         @default(0) @db.Decimal(10, 6) // user credits
  trans_type      TransactionType @default(new_user)
  created_at      DateTime        @default(now())
  expired_at      DateTime?
  user            users           @relation(fields: [user_id], references: [id])
}

enum OrderStatus {
  pending    // Order is created but not paid
  completed  // Payment completed
  cancelled  // Order cancelled
}

model orders {
  id                String      @id @default(uuid())
  user_id           String
  user_email        String
  amount            Decimal     @default(0) @db.Decimal(10, 6)
  credits           Decimal     @default(0) @db.Decimal(10, 6)
  currency          String      @default("usd")
  status            OrderStatus @default(pending)
  stripe_session_id String?
  created_at        DateTime    @default(now())
  updated_at        DateTime    @updatedAt
  user              users       @relation(fields: [user_id], references: [id])
}
